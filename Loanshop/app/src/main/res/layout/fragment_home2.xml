<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_title_bg"/>

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="57dp"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/home_title2"
            />
        <TextView
            android:id="@+id/tv_home_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_home_title"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/home_title2_1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="@drawable/add_bg_shadow"
            android:layout_marginTop="124dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="144dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_loan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_black"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/login_title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#ffee6a4b"
                    android:text="Â¥"/>
                <TextView
                    android:id="@+id/tv_home_loan_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="60,000"
                    android:textStyle="bold"
                    android:textColor="#ED654A"
                    android:textSize="44sp"
                    />

            </LinearLayout>



            <Button
                android:id="@+id/home_apply_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/maincolor_btn"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/home_btn" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/maincolor_bg_shadow"
                android:layout_marginTop="14dp"
                >
                <TextView
                    android:id="@+id/tv_home_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/main_color"
                    android:text="@string/home_little_text"
                   />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="4dp"
        android:background="@color/list_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">


        <ListView
            android:id="@+id/find_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:divider="@color/gray_line"
            android:dividerHeight="2px"
            android:scrollbars="none"
            >

        </ListView>

    </LinearLayout>









</LinearLayout>